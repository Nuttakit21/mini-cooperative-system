<aside class="sidebar @(Collapsed ? "collapsed" : "")">
    <div class="nav-container">
        @if (AppState.Menus != null)
        {
            @foreach (var group in AppState.Menus)
            {
                <div class="menu-group">
                    <div class="menu-group-title" @onclick="() => ToggleGroup(group.Name)">
                        @if (!string.IsNullOrWhiteSpace(group.Icon))
                        {
                            <i class="@group.Icon"></i>
                        }

                        @if (!Collapsed)
                        {
                            <span>@group.Name</span>
                            <i class="bi bi-chevron-down arrow-icon @(activeGroupName == group.Name ? "rotate" : "")"></i>
                        }
                    </div>

                    <nav class="nav flex-column submenu @(activeGroupName == group.Name || Collapsed ? "show" : "")">
                        @foreach (var menu in group.Menus)
                        {
                            <NavLink class="nav-link"
                                     href="@($"/{AppState.CurrentApp}/{menu.Path}")"
                                     Match="NavLinkMatch.All">
                                @if (!Collapsed)
                                {
                                    <span class="menu-text">@menu.Name</span>
                                }
                            </NavLink>
                        }
                    </nav>
                </div>
            }
        }
    </div>
</aside>

<style>
    .sidebar {
        height: calc(100vh - 65px);
        position: sticky;
        top: 65px;
        background-color: #ffffff;
        border-right: 1px solid #f1f5f9;
        transition: width 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
        display: flex;
        flex-direction: column;
        box-shadow: 10px 0 15px -3px rgba(0, 0, 0, 0.02);
        z-index: 90;
    }

    .nav-container {
        flex: 1;
        overflow-y: auto;
        overflow-x: hidden;
        padding-top: 10px;
        padding-bottom: 30px;
        scrollbar-width: none;
    }

        .nav-container::-webkit-scrollbar {
            display: none;
        }

    .menu-group {
        margin-bottom: 8px;
    }

    .menu-group-title {
        display: flex;
        align-items: center;
        padding: 16px 24px;
        color: #1e293b;
        font-weight: 800;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.2s ease;
        user-select: none;
    }

        .menu-group-title i:first-child {
            width: 20px;
            margin-right: 12px;
            font-size: 1.2rem;
            color: #3b82f6;
        }

    .arrow-icon {
        font-size: 0.65rem !important;
        margin-left: auto;
        transition: transform 0.3s ease;
        color: #cbd5e1;
    }

        .arrow-icon.rotate {
            transform: rotate(180deg);
            color: #3b82f6;
        }

    .submenu {
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        max-height: 0;
        opacity: 0;
    }

        .submenu.show {
            max-height: 800px;
            opacity: 1;
            margin-bottom: 10px;
        }

    .nav-link {
        display: flex !important;
        align-items: center;
        margin: 2px 14px;
        padding: 12px 16px !important;
        color: #64748b !important;
        border-radius: 12px;
        text-decoration: none !important;
        font-weight: 500;
        transition: all 0.25s ease;
        border: 1px solid transparent;
    }

        .nav-link:hover {
            background-color: #f8fafc;
            color: #2563eb !important;
        }

        .nav-link.active {
            background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
            color: #ffffff !important;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
        }

        .nav-link i {
            width: 20px;
            margin-right: 12px;
            font-size: 1.1rem;
            text-align: center;
        }

    .sidebar.collapsed {
        width: 80px;
    }

        .sidebar.collapsed .menu-group-title {
            justify-content: center;
            padding: 20px 0;
        }

            .sidebar.collapsed .arrow-icon,
            .sidebar.collapsed .menu-group-title span,
            .sidebar.collapsed .menu-text {
                display: none;
            }

        .sidebar.collapsed .submenu {
            max-height: none;
            opacity: 1;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            margin: 4px 14px;
            padding: 12px 0 !important;
        }

            .sidebar.collapsed .nav-link i {
                margin-right: 0;
            }
</style>