@using Microsoft.AspNetCore.Components.Authorization
@using MiniCoop.Web.Services
@using MiniCoop.Web.Shared.Layout
@using MiniCoop.Web.Shared

@inject AuthenticationStateProvider AuthStateProvider
@inject CustomAuthStateProvider AuthState

<CascadingAuthenticationState>
    @if (IsLoading)
    {
        <FullScreenLoading />
    }
    else
    {
        <Router AppAssembly="@typeof(App).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData"
                                    DefaultLayout="@typeof(MainLayout)">
                    <NotAuthorized>
                        <RedirectToLogin />
                    </NotAuthorized>
                </AuthorizeRouteView>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(MainLayout)">
                    <p>ไม่พบหน้า</p>
                </LayoutView>
            </NotFound>
        </Router>
    }
</CascadingAuthenticationState>

@code {
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var authTask = AuthState.GetAuthenticationStateAsync();
        var delayTask = Task.Delay(500);

        await Task.WhenAll(authTask, delayTask);

        IsLoading = false;
    }
}